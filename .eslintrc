{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import", "node", "promise", "standard", "prettier"],
  "rules": {
    "no-console": "warn"
  },
  "overrides": [
    {
      "files": ["webpack.config.js"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
